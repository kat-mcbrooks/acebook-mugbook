<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <% image_tag url_for(current_user.image), size: "150x150" %>
        
      </div>
    </div>
    
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username">MugBook</h2>
        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
        <li><span>53</span> posts</li>
        <li><span>100</span> followers</li>
        <li><span>100</span> following</li>
      </ul>

      <h2 class="name">MUGBOOK</h2>
      <a class="website">mugbook.com</a>
    </div>
  </div>
</div>

<div class="user-tabs">
<a class="tab active" href="">
  <i class="fa fa-th"></i>
  POSTS
</a>
<a class="tab" href="">
  <i class="fa fa-tv"></i>
  IGTV
</a>
<a class="tab" href="">
  <i class="fa fa-bookmark"></i>
  SAVED
</a>
<a class="tab" href="">
  <i class="fa fa-tag"></i>
  TAGGED
</a>
</div>

